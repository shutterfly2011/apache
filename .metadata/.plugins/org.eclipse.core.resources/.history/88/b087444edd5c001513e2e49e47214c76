<body>

<textarea rows='20' cols='80' id='userValue'>Hello World</textarea><br />

<input type='button'  value='Load Cartoon.csv' onclick="doLoad('')"  />	
<br> Enter filename to display
<input id='fname' type="text" value="" size="60">

<input type='button'  value='Load file' onclick="doLoad(el('fname').value)"  />	
<br> <buton onclick="parseCSV()">Parse CSV</buton>
<br>
Open <button onclick="window.location=el('fname').value" target="_blank">
 entered filename</button> in a new tab/window.

<script type='text/javascript'>

function el(tid) {return document.getElementById(tid);}

function IO(U, V) {//LA MOD String Version. A tiny ajax library.  by, DanDavis
    var X = !window.XMLHttpRequest ? new ActiveXObject('Microsoft.XMLHTTP') : new XMLHttpRequest();
    X.open(V ? 'PUT' : 'GET', U, false );
    X.setRequestHeader('Content-Type', 'text/html')
    X.send(V ? V : '');
    return X.responseText;
}	

function doLoad(info){
  if (info == '') { el("userValue").value = IO("TagHistory.csv"); }
             else { el('userValue').value = IO(info); }
}
</script>
</body>
