<script type="text/javascript">
var dataSet;
var candleStickChart;
var option = {
	    tooltip : {
	        trigger: 'axis',
	        formatter: function (params) {
	            var res = params[0].name;
	            res += '<br/>  Lower Quartile : ' + params[0].value[0] + '  Max : ' + params[0].value[3];
	            res += '<br/>  Upper Quartile ' + params[0].value[1] + '  Min : ' + params[0].value[2];
	            return res;
	        }
	    },
	    legend: {
	        data:['Step time statistics']
	    },
	    toolbox: {
	        show : true,
	        feature : {
	            mark : {show: true},
	            dataZoom : {show: true},
	            dataView : {show: true, readOnly: false},
	            restore : {show: true},
	            saveAsImage : {show: true}
	        }
	    },
	    dataZoom : {
	        show : true,
	        realtime: true,
	        start : 0,
	        end : 50
	    },
	    xAxis : [
	        {
	            type : 'category',
	            boundaryGap : true,
	            axisTick: {onGap:false},
	            splitLine: {show:false},
	            data : ['ProcessWait','RMCharge','OxFeed','Digest','WaitTransfer','Transfer']
	        }
	    ],
	    yAxis : [
	        {
	            type : 'value',
	            scale:true,
	            boundaryGap: [0.01, 0.01]
	        }
	    ],
	    series : [
	        {
	            name:'Step times',
	            type:'k',
	            /*
	            barMaxWidth: 20,
	            itemStyle: {
	                normal: {
	                    color: 'red',           
	                    color0: 'lightgreen',   
	                    lineStyle: {
	                        width: 2,
	                        color: 'orange',    
	                        color0: 'green'     
	                    }
	                },
	                emphasis: {
	                    color: 'black',         
	                    color0: 'white'         
	                }
	            },
	            */
	            data:[ 	
	                	//[1stQ, 3rdQ,Min,Max]
	                    [45, 60, 30, 80],
	                    [20,20,20,20],
	                    [30,30,30,30],
	                    [23,40,15,60],
	                    [50,50,50,50],
	                    [70,70,70,70]
	        	]	
	        }
	    ]
	};
	require.config({
        paths: {
            echarts: 'js'
        }
    });
	require(
            [
                'echarts',
                'echarts/chart/k' // require the specific chart type
            ],
            function (ec) {
            	var myChart = ec.init(document.getElementById('candleStickChart'));
            	myChart.setOption(option);
            }
    );
	
</script>
